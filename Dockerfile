FROM node:latest

# ----------------------------------------------
# ----------[Configuração do ambiente]----------
# ----------------------------------------------

COPY . /app

# ----------------------------------------------
# ------------[Diretório do projeto]------------
# ----------------------------------------------

WORKDIR /app

# ----------------------------------------------
# --------[Instalação das dependências]---------
# ----------------------------------------------

RUN npm install

# ----------------------------------------------
# -------------[Exposição da porta]-------------
# ----------------------------------------------

EXPOSE 3000

# ----------------------------------------------
# ----------[Entrypoint da aplicação]-----------
# ----------------------------------------------

CMD [ "npm", "run", "start" ]
